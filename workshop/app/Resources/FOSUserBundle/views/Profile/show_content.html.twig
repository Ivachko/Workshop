{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
<div class="fos_user_user_show">
    <h1>Bonjour, {{ user.username }}</h1>

<div class="row">
    <h2>Reservation des restaurants <span class="badge">{{ reservation|length }}    </span></h2>
    {% for item in reservation %}
        <h1>{{ item.restaurant.nom }}</h1>
        <blockquote>
            <p>RDV le : {{ item.date | date('d/m/y Ã  h:i') }}</p>
            <footer>Adresse : {{ item.restaurant.adresse }} | {{ item.restaurant.ville.nom }} {{ item.restaurant.ville.codepostal }}</footer>
        </blockquote>
        <a href="" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash"></span> Annuler reservation</a>
    {% endfor %}
</div>
</div>