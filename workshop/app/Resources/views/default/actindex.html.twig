{% extends 'base.html.twig' %}
{% block body %}
    <section class="global-page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <h1> <u>Nos activités inédites</u></h1>
                        <ol class="breadcrumb">
                            <li>
                                <h3>Réservez dès maintenant nos activités pour vivre des expériences incroyables uniquement disponible sur notre plateforme.</h3>

                            </li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="gallery" class="gallery">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <figure class="wow fadeInLeft animated portfolio-item animated animated" data-wow-duration="500ms" data-wow-delay="0ms" style="visibility: visible; animation-duration: 500ms; animation-delay: 0ms; animation-name: fadeInLeft;">
                        <div class="img-wrapper">
                            <img src="{{ asset('images/blog/cata3.jpg') }}" class="img-responsive" alt="this is a title">
                            <div class="overlay">
                                <div class="buttons">
                                    <a rel="gallery" class="fancybox" href="catacombes.html">Réserver</a>
                                </div>
                            </div>
                        </div>
                    </figure>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <figure class="wow fadeInLeft animated animated animated" data-wow-duration="500ms" data-wow-delay="300ms" style="visibility: visible; animation-duration: 500ms; animation-delay: 300ms; animation-name: fadeInLeft;">
                        <div class="img-wrapper">
                            <img src="{{ asset('images/blog/seine3.jpg') }}" class="img-responsive" alt="this is a title">
                            <div class="overlay">
                                <div class="buttons">
                                    <a rel="gallery" class="fancybox" href="Croisiere-Seine.html">Réserver</a>
                                </div>
                            </div>
                        </div>
                    </figure>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <figure class="wow fadeInLeft animated animated animated" data-wow-duration="500ms" data-wow-delay="500ms" style="visibility: visible; animation-duration: 500ms; animation-delay: 500ms; animation-name: fadeInLeft;">
