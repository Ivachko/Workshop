                                <div class="buttons">
                                    <a rel="gallery" class="fancybox" href="Opera.html">Réserver</a>
                                </div>
                            </div>
                        </div>
                    </figure>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <figure class="wow fadeInLeft animated animated" data-wow-duration="500ms" data-wow-delay="1100ms" style="visibility: visible; animation-duration: 500ms; animation-delay: 1100ms;">
                        <div class="img-wrapper">
                            <img src="{{ asset('images/blog/spa3.jpg') }}" class="img-responsive" alt="">
                            <div class="overlay">
                                <div class="buttons">
                                    <a rel="gallery" class="fancybox" href="Spa-noir.html">Réserver</a>
                                </div>
                            </div>
                        </div>
                    </figure>
                </div>


                    {%   for item in listActivite %}

                        <div class="col-sm-4 col-xs-12">
                            <figure class="wow fadeInLeft animated animated" data-wow-duration="500ms" data-wow-delay="1100ms" style="visibility: visible; animation-duration: 500ms; animation-delay: 1100ms;">
                                <div class="img-wrapper">
                                    <img src="{{ item.Urlphoto}}" class="img-responsive" alt="">
                                    <div class="overlay">
                                        <div class="buttons">
                                            <a rel="gallery" class="fancybox" href="{{ path('activiteReservation',{'nom':item.nom}) }}">Réserver</a>
                                        </div>
                                    </div>
                                </div>
                            </figure>
                        </div>
                    {%  endfor %}
                </div>

        </div>
    </section>


{% endblock %}