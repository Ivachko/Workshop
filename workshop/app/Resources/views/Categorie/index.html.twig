{% extends 'base.html.twig' %}
{% block body %}
    <a href="{{ path("ajouterCategorie") }}">Ajouter Categorie</a>
    <table class="table">

        <th>Nom</th>

        <th>Action</th>


        {% for item in listCategorie %}
            <tr>
                <td>{{ item.Nom }}</td>
                <td><a href="{{ path("editCategorie",{"id":item.id}) }}"><span class="btn btn-sm btn-primary glyphicon glyphicon-pencil"></span></a> | <a href="{{ path("editCategorie",{"id":item.id}) }}" class="btn btn-sm btn-danger glyphicon glyphicon-trash"></a></td>

            </tr>
        {% endfor %}

    </table>
{% endblock %}